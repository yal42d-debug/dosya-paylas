{
    "java.configuration.updateBuildConfiguration": "automatic",
    "cSpell.import": [
        "${workspaceFolder}/cspell.json"
    ],
    "cSpell.enabledFileTypes": {
        "javascript": true,
        "typescript": true,
        "json": true,
        "markdown": true,
        "html": true,
        "css": true,
        "xml": true,
        "yaml": true,
        "gradle": false,
        "groovy": false,
        "shellscript": true
    },
    "groovy.lint.enable": false,
    "gradle.nestedProjects": false,
    "gradle.projectOpenBehavior": "Interactive",
    "files.exclude": {
        "**/mobile-app/platforms/android/CordovaLib/cordova.gradle": true,
        "**/mobile-app/node_modules/cordova-android/framework/cordova.gradle": true
    }
}